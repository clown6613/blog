---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import PostCard from '../../components/PostCard.astro';
import { CATEGORIES, type CategoryId } from '../../constants/categories';

export async function getStaticPaths() {
  return Object.keys(CATEGORIES).map(categoryId => ({
    params: { category: categoryId },
  }));
}

const { category: categoryId } = Astro.params;
const category = CATEGORIES[categoryId as CategoryId];

if (!category) {
  return Astro.redirect('/404');
}

// カテゴリに該当する公開記事を取得
const posts = (await getCollection('posts', ({ data }) => {
  return data.published === true && data.category === categoryId;
})).sort((a, b) =>
  b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<BaseLayout title={`${category.name} - My Blog`}>
  <Header slot="header" />

  <div class="space-y-8">
    <div class="mb-12">
      <div class="flex items-center gap-3 mb-4">
        <span class="text-5xl">{category.icon}</span>
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white">
          {category.name}
        </h1>
      </div>
      <p class="text-lg text-gray-600 dark:text-gray-400">
        {category.description}
      </p>
    </div>

    {posts.length === 0 ? (
      <div class="text-center py-12">
        <p class="text-gray-600 dark:text-gray-400 text-lg">
          このカテゴリの記事はまだありません。
        </p>
      </div>
    ) : (
      <div class="grid gap-6 md:gap-8">
        {posts.map(post => (
          <PostCard post={post} />
        ))}
      </div>
    )}
  </div>

  <Footer slot="footer" />
</BaseLayout>
